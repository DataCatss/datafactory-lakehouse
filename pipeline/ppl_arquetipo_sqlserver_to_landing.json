{
	"name": "ppl_arquetipo_sqlserver_to_landing",
	"properties": {
		"activities": [
			{
				"name": "Lookup",
				"type": "Lookup",
				"dependsOn": [],
				"policy": {
					"timeout": "0.12:00:00",
					"retry": 0,
					"retryIntervalInSeconds": 30,
					"secureOutput": false,
					"secureInput": false
				},
				"userProperties": [],
				"typeProperties": {
					"source": {
						"type": "AzureDatabricksDeltaLakeSource",
						"query": {
							"value": "@concat(\n    'SELECT * FROM lakehouse.auditoria.parameters WHERE process = ',\n    '''',\n    pipeline().parameters.prm_adb_process,\n    ''''\n)",
							"type": "Expression"
						}
					},
					"dataset": {
						"referenceName": "dset_read_adb",
						"type": "DatasetReference"
					},
					"firstRowOnly": false
				}
			},
			{
				"name": "ForEach",
				"type": "ForEach",
				"dependsOn": [
					{
						"activity": "Lookup",
						"dependencyConditions": [
							"Succeeded"
						]
					}
				],
				"userProperties": [],
				"typeProperties": {
					"items": {
						"value": "@activity('Lookup').output.value",
						"type": "Expression"
					},
					"activities": [
						{
							"name": "Copy data SQL to Landing",
							"type": "Copy",
							"dependsOn": [
								{
									"activity": "Delete parquet",
									"dependencyConditions": [
										"Succeeded"
									]
								}
							],
							"policy": {
								"timeout": "0.12:00:00",
								"retry": 0,
								"retryIntervalInSeconds": 30,
								"secureOutput": false,
								"secureInput": false
							},
							"userProperties": [],
							"typeProperties": {
								"source": {
									"type": "SqlServerSource",
									"sqlReaderQuery": {
										"value": "@item().query_input",
										"type": "Expression"
									},
									"queryTimeout": "02:00:00",
									"partitionOption": "None"
								},
								"sink": {
									"type": "ParquetSink",
									"storeSettings": {
										"type": "AzureBlobFSWriteSettings"
									},
									"formatSettings": {
										"type": "ParquetWriteSettings"
									}
								},
								"enableStaging": false,
								"translator": {
									"type": "TabularTranslator",
									"typeConversion": true,
									"typeConversionSettings": {
										"allowDataTruncation": true,
										"treatBooleanAsNumber": false
									}
								}
							},
							"inputs": [
								{
									"referenceName": "dset_read_sql_server",
									"type": "DatasetReference"
								}
							],
							"outputs": [
								{
									"referenceName": "dset_write_parquet",
									"type": "DatasetReference",
									"parameters": {
										"prm_container": {
											"value": "@pipeline().globalParameters.prm_global_container",
											"type": "Expression"
										},
										"prm_directory": {
											"value": "@concat(\n    '/landing/',\n    item().path_landing,\n    '/',\n    formatDateTime(utcNow(),'yyyy-MM-dd'),\n    '/',\n    formatDateTime(utcNow(),'HH')\n)",
											"type": "Expression"
										}
									}
								}
							]
						},
						{
							"name": "ntb_arquetipo_landing_to_bronze",
							"type": "DatabricksNotebook",
							"dependsOn": [
								{
									"activity": "Copy data SQL to Landing",
									"dependencyConditions": [
										"Succeeded"
									]
								}
							],
							"policy": {
								"timeout": "0.12:00:00",
								"retry": 0,
								"retryIntervalInSeconds": 30,
								"secureOutput": false,
								"secureInput": false
							},
							"userProperties": [],
							"typeProperties": {
								"notebookPath": "/Users/demokmpp@outlook.com/databricks-lakehouse/DML/lakehouse/arquetipos/ntb_arq_landing_to_bronze",
								"baseParameters": {
									"path_landing": {
										"value": "@concat(\n    '/landing/',\n    item().path_landing,\n    '/',\n    formatDateTime(utcNow(),'yyyy-MM-dd'),\n    '/',\n    formatDateTime(utcNow(),'HH')\n)",
										"type": "Expression"
									},
									"tabla_name": {
										"value": "@item().table_bronze",
										"type": "Expression"
									},
									"JobId": "{{job.id}}",
									"JobRunId": "{{job.run_id}}",
									"TaskRunId": "{{task.run_id}}",
									"StartTime": "{{job.start_time.iso_datetime}}"
								}
							},
							"linkedServiceName": {
								"referenceName": "AzureDatabricks",
								"type": "LinkedServiceReference"
							}
						},
						{
							"name": "Delete parquet",
							"type": "Delete",
							"dependsOn": [],
							"policy": {
								"timeout": "0.12:00:00",
								"retry": 0,
								"retryIntervalInSeconds": 30,
								"secureOutput": false,
								"secureInput": false
							},
							"userProperties": [],
							"typeProperties": {
								"dataset": {
									"referenceName": "dset_read_parquet",
									"type": "DatasetReference",
									"parameters": {
										"prm_container": "@pipeline().globalParameters.prm_global_container",
										"prm_directory": "@concat(     '/landing/',     item().path_landing,     '/',     formatDateTime(utcNow(),'yyyy-MM-dd'),     '/',     formatDateTime(utcNow(),'HH') )"
									}
								},
								"enableLogging": false,
								"storeSettings": {
									"type": "AzureBlobFSReadSettings",
									"recursive": true,
									"enablePartitionDiscovery": false
								}
							}
						}
					]
				}
			}
		],
		"parameters": {
			"prm_adb_process": {
				"type": "string"
			}
		},
		"folder": {
			"name": "Arquetipos"
		},
		"annotations": []
	}
}